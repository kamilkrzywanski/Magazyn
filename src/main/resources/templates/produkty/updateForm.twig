{% extends '../formTemplate.twig' %}

{% block title %}
    Formularz towaru
{% endblock %}

{% block header %}
    <h2>Formularz towaru</h2>
{% endblock %}

{% block form %}

    <form id="updateForm" action="/produkty/update/{{ produkt.getIdProdukt}}" method="POST">
        <fieldset>
            <div class="form-group">
                <label for="nazwa">Nazwa</label>
                <input type="text" class="form-control" id="nazwa" name="nazwa" value="{{ produkt.getNazwa }} " required>
                <label for="dlugosc">Długość</label>
                <input type="number" class="form-control" id="dlugosc" name="dlugosc" value="{{ produkt.getDlugosc }}" required >
                <label for="szerokosc">Szerokość</label>
                <input type="number" class="form-control" id="szerokosc" name="szerokosc" value="{{ produkt.getSzerokosc }}" required>
                <label for="wysokosc">Wysokość</label>
                <input type="number" class="form-control" id="wysokosc" name="wysokosc" value="{{ produkt.getWysokosc }}" required>


                <div class="form-group">
                    <label for="selectGrupa">Kategoria</label>
                    <select class="form-control" id="selectKategoria" name="selectKategoria" required>
                        <option value="">--Wybierz Kategorię--</option>
                        {% for kategoria in kategorie %}
                            <option value="{{kategoria.idKategoria}}" >{{kategoria.getNazwa}}</option>
                        {% endfor %}
                    </select>
                </div>
        </fieldset>
        <br/>
        <button type="submit" class="btn btn-info">Aktualizuj</button>
    </form>

{% endblock %}